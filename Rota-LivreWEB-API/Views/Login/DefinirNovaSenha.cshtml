@{
    Layout = null;
    int id = ViewBag.IdUsuario;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8" />
    <title>Nova Senha</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #ffefe3;
        }

        .texto {
            color: #b54200;
        }
    </style>
</head>
<body>
    <main class="container mt-5">
        <h2 class="texto mb-3">Definir Nova Senha</h2>

        <form asp-action="DefinirNovaSenha" method="post">
            <input type="hidden" name="id_usuario" value="@id" />

            <div class="form-floating mb-3">
                <input type="password" name="novaSenha" class="form-control" placeholder="Nova senha" required />
                <label>Nova senha</label>
            </div>

            <div class="form-floating mb-3">
                <input type="password" name="confirmarSenha" class="form-control" placeholder="Confirmar senha" required />
                <label>Confirmar senha</label>
            </div>

            @if (ViewBag.Erro != null)
            {
                <div class="alert alert-danger">@ViewBag.Erro</div>
            }

            <button class="btn btn-success" type="submit">Alterar senha</button>
        </form>
    </main>
</body>
</html>
