@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rota Livre</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/Login.css">

</head>

<body>

    <div class="background-pattern"></div>
    <div class="brand-compass"></div>
    <div class="route-dots"></div>

    <header class="cabecalho">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-between">
                <a href="/" class="d-flex align-items-center text-decoration-none">
                    <h1 class="name-pj">Rota Livre</h1>
                </a>

                <div class="text-end">
                    <button class="opc1 opcA btn btn-primary" type="button" onclick="window.location.href='/Login/Login'">Entrar</button>
                    <button class="btn-primary opc1 opcA btn" type="button" onclick="window.location.href='/RotaLivre/Create'">Cadastrar</button>
                </div>
            </div>
        </div>
    </header>

    <main class="form-signin w-50 m-auto">

        <h1 class="name-title text h3 mb-3 fw-normal">Bem vindo ao Rota Livre</h1>
        <h2 class="subtitle">Sua plataforma para descobrir e explorar os melhores destinos turísticos.</h2>

        <form asp-action="Login" method="post">

            @Html.AntiForgeryToken()

            <div class="input">
                <div class="form-floating w-100">
                    <input type="email" name="email" class="form-control " id="floatingInput" placeholder="nome@exemplo.com" required>
                    <label for="floatingInput">Informe seu Email</label>
                </div>
                <div class="form-floating w-100">
                    <input type="password" name="senha" class="form-control " id="floatingPassword" placeholder="Senha" required>
                    <label for="floatingPassword">Informe sua senha</label>
                </div>
            </div>

            @if (ViewBag.MensagemErro != null)
        {
            <div class="alert alert-danger">@ViewBag.MensagemErro</div>
        }

            <div class="acoes">

            <div class="containerEntrar">
                <button class="opc btn btn-outline-primary" type="submit">Entrar</button>
            </div>

            <div class="containerRedefinir">
                <a class="btn btn-link w-100 py-2" href="/Login/SolicitarRedefinicao">Esqueceu a senha?</a>
            </div>

            </div>

       
        </form>
    </main>

    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5>Rota Livre</h5>
                    <p>Sua plataforma para descobrir e explorar os melhores destinos turísticos.</p>
                    <div class="social-icons">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
                <div class="col-md-2 mb-4">
                    <h5>Links</h5>
                    <ul>
                        <li><a href="#">Início</a></li>
                        <li><a href="#">Sobre</a></li>
                        <li><a href="#">Destinos</a></li>
                        <li><a href="#">Contato</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-4">
                    <h5>Recursos</h5>
                    <ul>
                        <li><a href="#">Blog</a></li>
                        <li><a href="#">Guias</a></li>
                        <li><a href="#">Aplicativo</a></li>
                        <li><a href="#">FAQ</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-4">
                    <h5>Contato</h5>
                    <ul>
                        <li><i class="fas fa-envelope me-2"></i> contato@rotalivre.com</li>
                        <li><i class="fas fa-phone me-2"></i> (11) 99999-9999</li>
                        <li><i class="fas fa-map-marker-alt me-2"></i> São Paulo, Brasil</li>
                    </ul>
                </div>
            </div>
            <div class="copyright">
                <p>&copy; 2025 Rota Livre. Todos os direitos reservados.</p>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>

        window.addEventListener('scroll', function() {
            const header = document.querySelector('.cabecalho');
            if (window.scrollY > 50) {
                header.style.padding = '10px 0';
                header.style.backgroundColor = 'rgba(248, 249, 250, 0.98)';
            } else {
                header.style.padding = '15px 0';
                header.style.backgroundColor = 'rgba(248, 249, 250, 0.95)';
            }
        });
    </script>

</body>
</html>