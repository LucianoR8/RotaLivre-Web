@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Museu de São Paulo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            text-align: center;
        }
        .container {
            width: 90%;
            max-width: 800px;
            margin: 20px auto;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }
        img {
            max-width: 70%;
            height: auto;
            border-radius: 10px;
        }
        .content {
            margin-top: 20px;
            text-align: left;
            max-width: 80%;
            margin-left: auto;
            margin-right: auto;
            padding: 15px;
            border-radius: 5px;
            background: #fff;
            box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.1);
        }
        .section-title {
            background-color: #b54200;
            color: white;
            padding: 10px;
            font-weight: bold;
            text-align: center;
            border-radius: 5px;
            margin: 20px auto 0 auto;
            max-width: 80%;
        }

        body{
            background-color: #ffefe3;
        }
      .create-route-btn {
        margin-top: 2px;
        padding: 12px 25px;
        background-color: #b54200;;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        font-weight: bold;
        transition: background 0.3s, transform 0.2s;
      }
    
      .create-route-btn:hover {
        background-color: #6302d3;
        transform: scale(1.05);
      }

       .title{
            font-size: 22px;
            font-weight: bold;
       }
       
    </style>
</head>

<body>

@model Rota_LivreWEB_API.Models.Passeio
    <div class="container">
        <h1 class="title">@Model.nome_passeio</h1>
    <img src="@Url.Content("~" + Model.img_url)" class="card-img-top" alt="@Model.nome_passeio">
        
        <div class="section-title">Informações</div>
        <div id="info" class="content">
        <p>@Model.descricao</p>
        </div>
        
        <div class="section-title">Funcionamento</div>
        <div id="funcionamento" class="content">
        <p>@Model.funcionamento</p>
        </div> 

        @if (Model.Endereco != null)
        {
            <div class="section-title">Local</div>
            <div class="content">
                <p>@Model.Endereco.nome_rua, @Model.Endereco.numero_rua</p>
                @if (!string.IsNullOrEmpty(Model.Endereco.complemento))
                {
                    <p>Complemento: @Model.Endereco.complemento</p>
                }
                @if (!string.IsNullOrEmpty(Model.Endereco.bairro))
                {
                    <p>Bairro: @Model.Endereco.bairro</p>
                }
                <p>CEP: @Model.Endereco.cep</p>
            </div>
        }


        <a asp-controller="Avaliacao" asp-action="Index" asp-route-id="@Model.id_passeio" class="btn btn-outline-primary mt-3">Ver Comentários</a>
      
           
        <form method="post" action="/Passeios/Curtir">
            <input type="hidden" name="idPasseio" value="@Model.id_passeio" />
            <button type="submit" class="btn btn-outline-danger">
                <i class="fas fa-heart"></i> Curtir
            </button>
        </form>



    </div>
    </div>

 



 
</body>
</html>

