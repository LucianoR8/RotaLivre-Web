@model Rota_LivreWEB_API.Models.Usuario
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Perfil</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #ffefe3;
        }

        .txt {
            color: #b54200;
            text-align: center;
        }

        .edit-btn {
            margin-left: 48%;
        }
    </style>
</head>
<body>
    <h1 class="txt text h3 mb-3 fw-normal">Editar Perfil</h1>

    <form asp-action="Editar" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="id_usuario" />

        <div class="mb-2 form-floating w-100 mb-2">
            <input asp-for="nome_completo" class="form-control" placeholder="Nome" />
            <label>Nome</label>
        </div>

        <div class="mb-2 form-floating w-100 mb-2">
            <input asp-for="email" class="form-control" placeholder="Email" />
            <label>Email</label>
        </div>

        <div class="mb-2 form-floating w-100 mb-2">
            <input asp-for="data_nasc" class="form-control" type="date" />
            <label>Data de Nascimento</label>
        </div>

        <div class="mb-2 form-floating w-100 mb-2">
            <input asp-for="senha" class="form-control" type="password" />
            <label>Senha</label>
        </div>
        <div class="container-btn">
            <button type="submit" class="edit-btn btn btn-success">Salvar</button>
        </div>
    </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>