@model Rota_LivreWEB_API.Models.Usuario

@{
    Layout = null;
}


@{
    var perguntas = ViewBag.Perguntas as SelectList;
}

@if (perguntas == null)
{
    <p style="color:red">Erro: ViewBag.Perguntas está nulo</p>
}



<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rota Livre - Cadastro</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/Cadastro.css"> 
</head>
<body>

    <div class="background-pattern"></div>
    <div class="brand-compass"></div>
    <div class="route-dots"></div>

    <header class="cabecalho">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-between">
                <a href="/" class="d-flex align-items-center text-decoration-none">
                    <h1 class="name-pj">Rota Livre</h1>
                </a>

                <div class="text-end">
                    <button class="opc1 opcA btn btn-primary" type="button" onclick="window.location.href='/Login/Login'">Entrar</button>
                    <button class="btn-primary opc1 opcA btn" type="button" onclick="window.location.href='/RotaLivre/Create'">Cadastrar</button>
                </div>
            </div>
        </div>
    </header>

    <main class="container">
        <h1 class="name-title h3 mb-3 fw-normal">Cadastro</h1>

        <form asp-action="Create" method="post">
            <div class="form-floating w-100 mb-2">
                <input asp-for="nome_completo" class="form-control" placeholder="" />
                <label for="Nome_Completo">Digite seu nome</label>
            </div>

            <div class="form-floating w-100 mb-2">
                <input asp-for="data_nasc" class="form-control" type="date" />
                <label for="Data_Nasc">Digite sua data de nascimento</label>
            </div>

            <div class="form-floating w-100 mb-2">
                <input asp-for="email" class="form-control" type="email" placeholder="meuemail@gmail.com" />
                <label for="Email">Digite seu email</label>
            </div>

            <div class="form-floating w-100 mb-3">
                <input asp-for="senha" class="form-control" type="password" placeholder="Senha" />
                <label for="Senha">Digite sua senha</label>
            </div>

            <div class="form-floating w-100 mb-3">
                <input asp-for="ConfirmarSenha" class="form-control" type="password" placeholder="Confirmar Senha" />
                <label asp-for="ConfirmarSenha">Confirme sua senha</label>
                <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
            </div>

            
            <div class="form-floating w-100 mb-3">
                <select asp-for="id_pergunta" asp-items="ViewBag.Perguntas" class="form-select" id="perguntaSelect" aria-label="Pergunta de segurança">
                    <option value="">Selecione aqui a sua pergunta de segurança</option>
                </select>
                <label for="perguntaSelect">Pergunta de Segurança</label>
            </div>

            
            <div class="form-floating w-100 mb-3">
                <input asp-for="resposta_seg" class="form-control" id="resposta_seg" placeholder="Digite sua resposta para a pergunta acima" />
                <label for="resposta_seg">Resposta</label>
            </div>




            @if (ViewBag.MensagemErro != null)
                {
                    <div class="alert alert-danger">@ViewBag.MensagemErro</div>
                }


            <div class="ctn-btn">
                <button class="opc btn btn-outline-primary" type="submit">Cadastrar</button>
            </div>

        </form>
    </main>

    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5>Rota Livre</h5>
                    <p>Sua plataforma para descobrir e explorar os melhores destinos turísticos.</p>
                    <div class="social-icons">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
                <div class="col-md-2 mb-4">
                    <h5>Links</h5>
                    <ul>
                        <li><a href="#">Início</a></li>
                        <li><a href="#">Sobre</a></li>
                        <li><a href="#">Destinos</a></li>
                        <li><a href="#">Contato</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-4">
                    <h5>Recursos</h5>
                    <ul>
                        <li><a href="#">Blog</a></li>
                        <li><a href="#">Guias</a></li>
                        <li><a href="#">Aplicativo</a></li>
                        <li><a href="#">FAQ</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-4">
                    <h5>Contato</h5>
                    <ul>
                        <li><i class="fas fa-envelope me-2"></i> contato@rotalivre.com</li>
                        <li><i class="fas fa-phone me-2"></i> (11) 99999-9999</li>
                        <li><i class="fas fa-map-marker-alt me-2"></i> São Paulo, Brasil</li>
                    </ul>
                </div>
            </div>
            <div class="copyright">
                <p>&copy; 2025 Rota Livre. Todos os direitos reservados.</p>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>

        window.addEventListener('scroll', function() {
            const header = document.querySelector('.cabecalho');
            if (window.scrollY > 50) {
                header.style.padding = '10px 0';
                header.style.backgroundColor = 'rgba(248, 249, 250, 0.98)';
            } else {
                header.style.padding = '15px 0';
                header.style.backgroundColor = 'rgba(248, 249, 250, 0.95)';
            }
        });
    </script>

</body>
</html>
