<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="RotaLivreMobile.Views.CategoriaPage"
    Title="Categoria">

    <CollectionView
        ItemsSource="{Binding Passeios}"
        SelectionMode="Single"
        SelectionChanged="OnPasseioSelecionado">

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="10" Padding="0">

                    <VerticalStackLayout>

                        <Image
                            Source="{Binding ImagemUrl}"
                            HeightRequest="180"
                            Aspect="AspectFill"
                            InputTransparent="True"/>

                        <Label
                            Text="{Binding Nome}"
                            FontSize="18"
                            FontAttributes="Bold"
                            Margin="10,5,10,0"
                            InputTransparent="True"/>

                        <Label
                            Text="{Binding Descricao}"
                            Margin="10,0,10,10"
                            InputTransparent="True"/>

                    </VerticalStackLayout>

                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>

    </CollectionView>

</ContentPage>