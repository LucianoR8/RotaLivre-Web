<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RotaLivreMobile.Views.HomePage"
             Title="Home">

    <VerticalStackLayout Padding="20" Spacing="15">

        <!-- Nome do usuário -->
        <Label Text="{Binding NomeUsuario}"
               FontSize="22"
               FontAttributes="Bold" />

        <!-- Lista de passeios -->
        <CollectionView ItemsSource="{Binding Destaques}" SelectionMode="Single" 
                        SelectionChanged="OnPasseioSelecionado">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="0,5" HasShadow="True">
                        <VerticalStackLayout>
                            <Label Text="{Binding Nome}"
                                   FontSize="18"
                                   FontAttributes="Bold" />

                            <Label Text="{Binding Descricao}"
                                   FontSize="14" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>

</ContentPage>